@using frontend.Service.Declaration
@using frontend.Model.User
@using frontend.Service.Implementation
@inherits LayoutComponentBase
@inject NavigationManager MyNavigationManager


<main class="notConnectedLayout">
    @if ( MyNavigationManager.Uri != MyNavigationManager.BaseUri)
    {
        <NavLink class="returnArrow" href="/" Match="NavLinkMatch.All">
            <span class="oi oi-arrow-left" aria-hidden="true"/>
            <p>Retour</p>
        </NavLink>
    }
    @Body
</main>
<style>
.notConnectedLayout {
    width: 100%;
    height: 100vh;
    position: relative;
}
.notConnectedLayout .returnArrow{
    display: block;
    color: black;
    position: absolute;
    top: 20px;
    left: 20px;
    width: auto;
    height: 40px;
    font-size: 2em;
}
.notConnectedLayout .returnArrow p {
    display: inline-block;
    font-size: 0.6em;
    vertical-align: top;
    line-height: 2.15em;
    padding: 0 5px;
}

</style>
