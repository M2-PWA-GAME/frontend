@using System.Security.Cryptography.X509Certificates
@using Blazored.LocalStorage
@layout NotConnectedLayout

<section  class="logPortal">
    <h1>Nom de l'application</h1>
    <div class="redirectButtons">
        <NavLink class="redirectButtons__links--full" href="/login" Match="NavLinkMatch.All">
            <p>Connexion</p>
        </NavLink>
        <NavLink class="redirectButtons__links" href="/register" Match="NavLinkMatch.All">
            <p>Inscription</p>
        </NavLink>
    </div>
</section>

<style>
    
.logPortal h1 {
    display: inline-block;
    width: calc(100% - 60px);
    text-align: center;
    font-size: 2.7em;
    padding: 20px 30px;
    margin: clamp(100px, 20vh, 20vh) 0;
}
.logPortal .redirectButtons {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: auto;
    margin: clamp(20px, 5vh, 200px) 0;
}
.logPortal .redirectButtons__links {
    display: block;
