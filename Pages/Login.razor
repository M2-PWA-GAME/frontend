@page "/login"
@layout NotConnectedLayout


<section  class="login">
    <h1>Connexion</h1>
    <form>
    
    <CustomInput label="Email"/>
    <CustomInput type="password" label="Mot de passe"/>
    
  </form>
    <div class="bottomInfo">
        <NavLink class="loginButton" href="/login" Match="NavLinkMatch.All">
            <p>Se connecter</p>
        </NavLink>
        <p>Pas encore de compte ?</p>
        <NavLink href="/register" Match="NavLinkMatch.All">
            <i>Se cree un compte</i>
        </NavLink>
    </div>
</section>

<style>
.login {
    text-align: center;
}   
.login h1 {
    display: inline-block;
    width: calc(100% - 60px);
    text-align: center;
    font-size: 1.8em;
    padding: 20px 30px;
    margin: clamp(100px, 12vh, 12vh) 0;
}
.login .bottomInfo {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: auto;
    margin: clamp(20px, 5vh, 200px) 0;
    text-align: center;
}
.login .loginButton{
    display: block;
    width: calc(100% - 200px);
    padding: 15px 20px;
    margin: 30px 80px;
    border-radius: 4px;
    text-align: center;
    font-size: 1.2em;
    color: white;
    background-color: black;
    border: 1px solid black;
}

.login .bottomInfo i{
    display: inline-block;
}
.login .bottomInfo i{
    color: black;
    text-decoration: underline;
}

.login form{
    display: inline-block;
    text-align: center;
    width: calc(100% - 80px);
    margin: 0px 40px;
}

</style>