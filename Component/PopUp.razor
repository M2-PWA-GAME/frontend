<div class="popUpWrapper @GetPopClassActiv()"/>
<div class="popUp @GetPopClassActiv()">
    <span class="popUp__close" @onclick="@ClosePopUp">X</span>
    <div class="popUp__content">
        @Content
    </div>
    <div class="popUp__action">
        <button @onclick="@ClosePopUp"> Fermer </button>
        @Action
    </div>
</div>

<style>
.popUpWrapper{
    display: none;
}
.popUpWrapper.active{
    display: block;
    position: absolute;
    z-index: 10000;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.7);
}
.popUp {
    display: none;
}
.popUp.active{
    display: block;
    position: absolute;
    top: 50%; 
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1000000;
    width: 80%;
    height: 40vh;
    background-color: white;
    border-radius: 4px;
    padding: 30px;
    overflow: hidden;
}

.popUp__close{
    width: 30px;
    height: 30px;
    background-color: red;
    position: absolute;
    top: 15px;
    right: 15px;
}

.popUp__content{
    margin-top: 40px;
}

.popUp__action{
    position: absolute;
    display: flex;
    bottom: 0;
    left: 0;
    padding: 20px;
    width: -webkit-fill-available;
    background-color: teal;
    justify-content: space-around;
    align-items: center;
}
</style>

@code{
    private Boolean _displayPopUp;

    [Parameter]
    public Boolean DisplayPopUp
    {
        get => _displayPopUp;
        set
        {
            if (_displayPopUp == value ) return;
            _displayPopUp = value;
            DisplayPopUpChanged.InvokeAsync(value);
        }
    }

    [Parameter]
    public EventCallback<Boolean> DisplayPopUpChanged { get; set; }
    
    [Parameter]
    public RenderFragment Content { get; set; }

    [Parameter]
    public RenderFragment Action { get; set; }

    private String GetPopClassActiv()
    {
        if(DisplayPopUp){
            return "active";
        }else{
            return null;
        }
    }

    private void ClosePopUp() {
        DisplayPopUp = false;
    }
}