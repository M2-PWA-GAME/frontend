<NavLink class="gameCard" href="@gameLink" Match="NavLinkMatch.All">
    <img src="https://images.unsplash.com/photo-1585504198199-20277593b94f?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1477&q=80"/> 
    <div class="gameInfo">
        <p>@gameName</p>
        <ul>
            <li>8  <span class="oi oi-people" aria-hidden="true"/> </li>
            <li>3  <span class="oi oi-bolt" aria-hidden="true"/> </li>
            <li>10  <span class="oi oi-beaker" aria-hidden="true"/> </li>
            <li>3  <span class="oi oi-heart" aria-hidden="true"/> </li>
        </ul>
    </div>
</NavLink>

<style>
    .gameCard {
        width: 100%;
        display: flex;
        height: 120px;
        margin: 20px 0;
        border: 1px solid;
        border-radius: 4px;
        color: black;
    }

    .gameCard img{
        width: clamp(100px, 35%, 400px);
        object-fit: cover;
    }

    .gameCard .gameInfo{
        display: flex;
        justify-content: center;
        align-content: flex-start;
        flex-direction: column;
        width: 100%;
        flex-wrap: nowrap;
        align-items: flex-start;
        margin: 20px;
    }

    .gameCard .gameInfo p {
        font-size: 20px;
        line-height: 25px;
        font-weight: bold;
    }

    .gameCard .gameInfo ul {
        display: flex;
        text-decoration: none;
        list-style: none;
        padding: 0;
        width: 100%;
        flex-direction: row;
        flex-wrap: nowrap;
        align-content: center;
        justify-content: space-around;
        align-items: center;
    }
    .gameCard .gameInfo ul li {
        padding: 0 5px;
    }

</style>


@code{
    [Parameter]
    public String gameName { get; set; }

    [Parameter]
    public String gameLink { get; set; }
}