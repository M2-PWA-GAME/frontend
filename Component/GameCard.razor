<style>
    .gameCard {
        width: 100%;
        display: flex;
        height: 120px;
        margin: 20px 0;
        border: 1px solid;
        border-radius: 4px;
        color: black;
    }

    .gameCard img{
        width: clamp(100px, 35%, 400px);
        object-fit: contain;
    }

    .gameCard .gameInfo{
        display: flex;
        justify-content: center;
        align-content: flex-start;
        flex-direction: column;
        width: 100%;
        flex-wrap: nowrap;
        align-items: flex-start;
        margin: 20px;
    }

    .gameCard .gameInfo p {
        font-size: 20px;
        line-height: 25px;
        font-weight: bold;
    }

    .gameCard .gameInfo ul {
        display: flex;
        text-decoration: none;
        list-style: none;
        padding: 0;
        width: 100%;
        flex-direction: row;
        flex-wrap: nowrap;
        align-content: center;
        justify-content: space-around;
        align-items: center;
    }
    .gameCard .gameInfo ul li {
        padding: 0 5px;
    }

</style>


@code{
    [Parameter]
    public String gameName { get; set; }

    [Parameter]
    public String gameId { get; set; }

    private String buildGameLink (){
        var composeGameLink = "/games/" + gameId;
        return composeGameLink;
    }
}